index 695dd38d775c2e3d053f6779f03c7f260314faf0..ea393c638abaa52161812a34ade57d45d2155748 100644
--- a/src/main/java/net/minecraft/world/entity/player/Player.java
+++ b/src/main/java/net/minecraft/world/entity/player/Player.java
@@ -1862,6 +1862,7 @@ public abstract class Player extends LivingEntity {
     }
 
